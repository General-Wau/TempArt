<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal">



    <TableLayout
        android:id="@+id/table_layout"
        android:layout_margin="10dp"
        android:stretchColumns="*"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TableRow
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" >
            <ImageView
                android:id="@+id/imgView1"
                android:layout_height="50dp"
                android:layout_width="50dp"
                />
            <ImageView
                android:id="@+id/imgView2"
                android:layout_height="50dp"
                android:layout_width="50dp"
                />
            <ImageView
                android:id="@+id/imgView3"
                android:layout_height="50dp"
                android:layout_width="50dp"
                />
            <ImageView
                android:id="@+id/imgView4"
                android:layout_height="50dp"
                android:layout_width="50dp"
                />
            <ImageView
                android:id="@+id/imgView5"
                android:layout_height="50dp"
                android:layout_width="50dp"
                />

        </TableRow>

        <TableRow
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >
            <ImageView
                android:id="@+id/imgView6"
                android:layout_height="50dp"
                android:layout_width="50dp"
                />
            <ImageView
                android:id="@+id/imgView7"
                android:layout_height="50dp"
                android:layout_width="50dp"
                />
            <ImageView
                android:id="@+id/imgView8"
                android:layout_height="50dp"
                android:layout_width="50dp"
                />
            <ImageView
                android:id="@+id/imgView9"
                android:layout_height="50dp"
                android:layout_width="50dp"
                />
            <ImageView
                android:id="@+id/imgView10"
                android:layout_height="50dp"
                android:layout_width="50dp"
                />
        </TableRow>
        <TableRow
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >
            <ImageView
                android:id="@+id/imgView11"
                android:layout_height="50dp"
                android:layout_width="50dp"
                />
            <ImageView
                android:id="@+id/imgView12"
                android:layout_height="50dp"
                android:layout_width="50dp"
                />
            <ImageView
                android:id="@+id/imgView13"
                android:layout_height="50dp"
                android:layout_width="50dp"
                />
            <ImageView
                android:id="@+id/imgView14"
                android:layout_height="50dp"
                android:layout_width="50dp"
                />
            <ImageView
                android:id="@+id/imgView15"
                android:layout_height="50dp"
                android:layout_width="50dp"
                />
        </TableRow>
    </TableLayout>
    <Button
        android:id="@+id/setColorButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="@string/cancel"/>
</LinearLayout>